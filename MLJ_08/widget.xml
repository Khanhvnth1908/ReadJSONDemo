<!DOCTYPE widget PUBLIC "-//OASIS//DTD DocBook V3.1//EN">
<widget>
    <debug>on</debug>
    <window title="Sample Komfabulator widget">
        <name></name>
        <width></width>
        <height></height>
    </window>
    <image src="Images/Sun.png" name="sun1">
        <hOffset>250</hOffset>
        <vOffset>250</vOffset>
        <alignment>center</alignment>
    </image>
    <text data="Click Here" size="36" style="bold">
        <name>text1</name>
        <hOffset>250</hOffset>
        <vOffset>100</vOffset>
        <alignment>center</alignment>
        <onMouseUp>
            sun1.opacity = (sun1.opacity / 100) * 90;
        </onMouseUp>
    </text>
</widget>